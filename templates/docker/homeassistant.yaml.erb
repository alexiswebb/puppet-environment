version: '3'
services:
  home-assistant:
    image: 'homeassistant/home-assistant'
    volumes:
      - '/media/tb-tb/homeassistant:/config'
      - '/etc/localtime:/etc/localtime:ro'
    devices:
      - '/dev/ttyACM0:/dev/ttyACM0'
    network_mode: 'host'
    privileged: true

  mosquitto:
    image: 'eclipse-mosquitto'
    volumes:
      - '/media/tb-tb/mosquitto:/mosquitto/config'
    ports:
      - '1883:1883'
      - '9001:9001'
