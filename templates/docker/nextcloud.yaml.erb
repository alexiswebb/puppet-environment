version: '3'
services:
  web:
    image: 'nextcloud'
    restart: 'always'
    labels:
      - "traefik.frontend.rule=Host:cloud.brittg.com,butt.brittg.com,cloud.home.brittg.com,cloud.cascadia.demophoon.com"
      - "traefik.docker.network=traefik_default"
      - "traefik.enable=true"
    ports:
      - '9263:80'
    volumes:
      - '/media/tb-tb/nextcloud/:/var/www/html:rw'
    networks:
      - web
      - backend
  database:
    image: 'mariadb'
    restart: 'always'
    volumes:
      - '/media/tb-tb/nextcloud-db:/var/lib/mysql'
    networks:
      - backend
    environment:
      - MYSQL_ROOT_PASSWORD=<%= @root_db_password %>
      - MYSQL_PASSWORD=<%= @db_password %>
      - MYSQL_DATABASE=nextcloud
      - MYSQL_USER=nextcloud

networks:
  web:
    external:
      name: 'traefik_default'
  backend:
